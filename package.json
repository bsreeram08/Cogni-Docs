{
  "name": "cogni-docs",
  "version": "1.5.0",
  "description": "CogniDocs is a Model Context Protocol server for AI assistants to search and query documentation (local-first, provider-agnostic)",
  "type": "module",
  "author": {
    "name": "Sreeram",
    "url": "https://github.com/bsreeram08",
    "email": "me@sreerams.in"
  },
  "private": true,
  "main": "app/index.ts",
  "scripts": {
    "upload-server:dev": "bun run --watch app/index.ts",
    "upload-server:prod": "bun run app/index.ts",
    "start": "bun run app/index.ts",
    "test:upload-server": "bun tests/test-upload-server.ts",
    "start:chroma": "chroma run --path ./getting-started",
    "web:dev": "cd web && bun run dev",
    "web:build": "cd web && bun run build",
    "web:preview": "cd web && bun run preview",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "commitlint": "commitlint --from=origin/master --to=HEAD",
    "clean": "rm -rf dist",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/server-timing": "^1.3.0",
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "@huggingface/transformers": "^3.7.2",
    "@langchain/textsplitters": "^0.1.0",
    "@mareers/async-throttle": "^1.2.1",
    "@modelcontextprotocol/sdk": "^1.2.0",
    "@sinclair/typebox": "^0.32.15",
    "@types/html-to-text": "^9.0.4",
    "@xenova/transformers": "^2.17.2",
    "chonkie": "^0.3.0",
    "chromadb": "^3.0.14",
    "elysia": "^1.3.9",
    "html-to-text": "^9.0.5",
    "mammoth": "^1.10.0",
    "markdown-it": "^14.1.0",
    "pino": "^9.9.0",
    "unpdf": "^0.11.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.3",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.8.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bsreeram08/documentation-mcp"
  },
  "homepage": "https://github.com/bsreeram08/documentation-mcp#readme",
  "bugs": {
    "url": "https://github.com/bsreeram08/documentation-mcp/issues"
  },
  "overrides": {
    "sharp": "0.34.3"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "ai",
    "vector-search",
    "chromadb",
    "xenova",
    "elysia",
    "bun",
    "sse",
    "typescript",
    "CogniDocs"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,css,html,yml,yaml}": "prettier --write --ignore-unknown"
  }
}
